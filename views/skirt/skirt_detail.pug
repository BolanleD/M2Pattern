extends ../layout

block content
  .container
    h1 #{skirt.name}
    p #[strong Waist:] #{skirt.waist}
    p #[strong Hip:] #{skirt.hip}
    p #[strong SideHipDepth:] #{skirt.side_hip_depth}
    p #[strong FrontHipDepth:] #{skirt.front_hip_depth}
    p #[strong BackHipDepth:] #{skirt.back_hip_depth}
    p #[strong SkirtLength:] #{skirt.skirt_length}
    p #[strong BackHipArc:] #{skirt.back_hip_arc}
  
    hr
    a.btn.btn-primary(href=skirt.url+'/draft') Draft
    if user && user.role==2
      a.btn.btn-primary(href=skirt.url+'/update') Update      
      a.btn.btn-danger(href=skirt.url+'/delete') Delete